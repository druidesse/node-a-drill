<div class="container">
    <!--<h1>get all page</h1>-->
    <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-3">
        <a href="/contacts/add"><button class="btn btn-primary" type="button">Add Contact</button></a>
    </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
            <th scope="col">email</th>
            <th scope="col">phone</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each contacts}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{phone}}</td>
                <td>
                    <a href="/contacts/{{id}}"><button type="button" class="btn btn-primary">Edit</button></a>
                    <form style="display:inline;" action="/contacts/{{id}}?_method=DELETE" method="post"><button type="submit" class="btn btn-danger">Delete</button></form>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="5">no user exists.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <ul>
    
</div>

